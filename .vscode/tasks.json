{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run tests",
      "type": "shell",
      "command": "gradle",
      "args": [
        "clean",
        "mandatoryChecks",
        "--info",
        "--no-daemon"
      ],
      "options":{
        "cwd": "${workspaceFolder}/Autotest"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}